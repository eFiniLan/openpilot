+  // PFEIFER - AOL {{
+  bool aol_allowed = acc_main_on && (alternative_experience & ALT_EXP_ENABLE_ALWAYS_ON_LATERAL);
+  if(controls_allowed) {
+    // acc main must be on if controls are allowed
